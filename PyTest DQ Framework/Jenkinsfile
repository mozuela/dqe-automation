pipeline {
    agent any

    environment {
        DB_CREDS = credentials('postgres-dqe')
    }

    stages {
        stage('Run Tests') {
            steps {
                checkout scm
                sh '''
                pip install -r requirements.txt
                mkdir -p reports
                cd "PyTest DQ Framework"

                pytest "tests/dq checks/parquet_files/test_*.py" -v \
                  --db_host="localhost" \
                  --db_port="5434" \
                  --db_name="mydatabase" \
                  --db_user=${DB_CREDS_USR} \
                  --db_password=${DB_CREDS_PSW} \
                  --parquet_path="/parquet_data" \
                  --html=../reports/report.html \
                  --self-contained-html 2>&1 | tee ../reports/output.log

                # Create simple summary
                echo "# Test Results" > ../reports/summary.md
                echo "Passed: $(grep -c "PASSED" ../reports/output.log)" >> ../reports/summary.md
                echo "Failed: $(grep -c "FAILED" ../reports/output.log)" >> ../reports/summary.md
                '''
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'reports/**'
                publishHTML([
                    reportDir: 'reports',
                    reportFiles: 'report.html',
                    reportName: 'DQE Report'
                ])
            }
        }
    }
}